@model IEnumerable<LumenTechnology.Models.Product>
@{
    ViewData["Title"] = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ProductDetails</h1>
<div class="container">
    <div class="row">
        @foreach (var data in Model)
        {
        <div class="col-4">
            <img src="https://lumenstoragesurdas.blob.core.windows.net/productimage/@data.fieldimage"/>
            <h1 class="text-danger">@data.productName</h1>
            <p>@data.productDesc</p>
            <a href="product">LEARN MORE</a>
        </div>
        }
    </div>
    
</div>

